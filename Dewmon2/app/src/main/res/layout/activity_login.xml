<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".Login">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        app:lottie_rawRes="@raw/loginanimation"
        app:lottie_autoPlay="true"
        android:layout_centerHorizontal="true"
        app:lottie_loop="true"/>


    <TextView
        android:id="@+id/loginpage_text"
        android:layout_width="wrap_content"
        android:layout_below="@id/animationView"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="40dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginpage_text"
        android:layout_marginTop="20dp"
        android:background="@drawable/layoutdesign"
        android:orientation="vertical">


            <EditText
                android:background="@drawable/rounddesign"
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="16dp"
                android:drawableEnd="@drawable/ic_email"
                android:ems="10"
                android:hint="Email Address"
                android:textColorHint="@android:color/black"
                android:inputType="textEmailAddress"
                android:drawableRight="@drawable/ic_email" />

            <EditText
                android:background="@drawable/rounddesign"
                android:id="@+id/loginPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="Password"
                android:textColorHint="@android:color/black"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/ic_pass"
                android:drawableRight="@drawable/ic_pass" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:textColor="#ffffff"
                android:text="LOgin" />

            <Button
                android:id="@+id/gotoRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_button"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="#ffffff"
                android:text="Create Account" />

    </LinearLayout>

</RelativeLayout>