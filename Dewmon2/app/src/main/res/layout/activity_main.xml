<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/homepage"
    android:background="@color/background"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_marginTop="2dp"
        android:id="@+id/logout_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/background"
        android:src="@drawable/ic_logout"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:lottie_rawRes="@raw/home"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        android:layout_centerHorizontal="true"
        app:lottie_loop="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@id/animationView"
        android:id="@+id/appname1"
        android:layout_centerHorizontal="true"
        android:text="DewMon"
        android:textColor="#ffa384"
        android:textStyle="bold"
        android:textSize="35sp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appname1"
        android:id="@+id/appname2"
        android:text="Humidity Management System"
        android:textColor="#ffffff"
        android:fontFamily="@font/poppinsbold"
        android:textSize="20sp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appname2"
        android:id="@+id/appname3"
        android:text="xIIITA"
        android:fontFamily="@font/poppinsbold"
        android:textColor="#03DAC5"
        android:textStyle="bold"
        android:textSize="30sp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appname3"
        android:layout_marginTop="35dp"
        android:id="@+id/avghltext"
        android:text="Average Humidity Level"
        android:textColor="#ffffff"
        android:fontFamily="@font/poppinsmedium"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginBottom="5dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avghltext"
        android:id="@+id/avghumidityValue"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="45"
        android:textColor="#ffffff"
        android:paddingLeft="30dp" />


    <Button
        android:id="@+id/btgenerate_avghl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avghumidityValue"
        android:layout_centerInParent="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/layoutdesign"
        android:text="Calculate Avg HL"
        android:textColor="#000000" />




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutdesign"
        android:layout_below="@id/btgenerate_avghl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="24dp"
        android:textColor="#000000"
        android:text="Enter Spot"
        android:id="@+id/btEnter_spot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/background"
        android:text="About Us "
        android:fontFamily="@font/poppinsmedium"
        android:longClickable="true"
        android:id="@+id/aboutUs_txt"
        android:textColor="#ffffff"
        android:textSize="20sp"/>



</RelativeLayout>